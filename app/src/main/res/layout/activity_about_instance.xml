<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/DoliDroidThemeFirst"
    tools:context=".AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="4dp"
        android:textColor="@color/black"
        android:theme="@style/DoliDroidThemeFirst">

        <FrameLayout
            android:id="@+id/FrameLayoutImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textAboutAndroidClient"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@android:color/white"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/imageView03"
                android:layout_width="82dp"
                android:layout_height="145dp"
                android:layout_below="@+id/textAboutAndroidClient"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:foregroundTint="#009688"
                android:src="@drawable/ic_baseline_screenshot_monitor_24" />
        </FrameLayout>

        <TextView
            android:id="@+id/textAboutAndroidClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/dolibarr_for_android"
            android:textColor="@color/grey"
            tools:context=".AboutActivity"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/textAboutCurrentUrl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/FrameLayoutImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="14dp"
            android:maxLines="50"
            android:text="@string/textAboutC"
            android:textSize="14sp"
            tools:context=".AboutActivity" />


    </RelativeLayout>

</ScrollView>

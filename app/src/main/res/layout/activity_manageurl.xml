<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:theme="@style/DoliDroidThemeFirst"
    tools:context=".ManageURLActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:theme="@style/DoliDroidThemeFirst"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/black">

        <TextView
            android:id="@+id/textAndroidClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/dolibarr_for_android"
            android:textColor="@color/grey"
            tools:context=".ManageURLActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/TextInstanceURLTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageTop"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="18dp"
            android:maxLines="50"
            android:text="@string/textAboutB"
            android:textSize="16sp"
            tools:context=".ManageURLActivity" />

        <TextView
            android:id="@+id/textListOfUrlsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonDeletePredefinedUrl"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="18dp"
            android:maxLines="50"
            android:text="@string/ListOfUrls"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:context=".ManageURLActivity" />

        <TextView
            android:id="@+id/TextSavedLogins"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/TextInstanceURLTitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"
            android:maxLines="50"
            android:text="@string/textAboutB2"
            android:textSize="16sp"
            tools:context=".ManageURLActivity" />

        <Button
            android:id="@+id/buttonDeletePredefinedUrl"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/TextSavedLogins"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:background="#009688"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="@string/DeletePredefinedUrl"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/buttonClearAllUrl"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/list_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="14dp"
            android:background="#009688"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="@string/DeleteAllPredefinedUrl"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <ImageView
            android:id="@+id/imageTop"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:contentDescription="Manage url logo"
            android:foregroundTint="#009688"
            android:src="@drawable/ic_baseline_storage_24"
            tools:ignore="ImageContrastCheck"
            tools:visibility="visible" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_below="@id/textListOfUrlsTitle"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

</ScrollView>

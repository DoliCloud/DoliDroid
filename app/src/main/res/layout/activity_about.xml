<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:theme="@style/DoliDroidThemeFirst"
    tools:context=".AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:theme="@style/DoliDroidThemeFirst"
        android:background="@color/white"
        android:textColor="@color/black">

        <TextView
            android:id="@+id/textAndroidClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/dolibarr_for_android"
            android:textColor="@color/grey"
            tools:context=".AboutActivity"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/TextAbout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView01"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:maxLines="30"
            android:text="@string/textAboutA"
            android:textSize="14sp"
            tools:context=".AboutActivity" />

        <TextView
            android:id="@+id/TextAbout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView02"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:maxLines="50"
            android:text="@string/textAboutB"
            android:textSize="14sp"
            tools:context=".AboutActivity" />

        <TextView
            android:id="@+id/TextAbout02b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonDeletePredefinedUrl"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:maxLines="50"
            android:text="@string/textAboutB2"
            android:textSize="14sp"
            tools:context=".AboutActivity" />

        <Button
            android:id="@+id/buttonDeletePredefinedUrl"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/TextAbout02"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="14dp"
            android:background="#009688"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:text="@string/DeletePredefinedUrl"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/TextAbout03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView03"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:maxLines="50"
            android:text="@string/textAboutC"
            android:textSize="14sp"
            tools:context=".AboutActivity" />

        <ImageView
            android:id="@+id/imageView01"
            android:layout_width="48dp"
            android:layout_height="42dp"
            android:layout_below="@+id/textAndroidClient"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/yellow"
            android:backgroundTintMode="screen"
            android:src="@android:drawable/ic_menu_info_details" />

        <ImageView
            android:id="@+id/imageView02"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_below="@id/TextAbout01"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:foregroundTint="#009688"
            android:src="@android:drawable/ic_menu_view" />

        <ImageView
            android:id="@+id/imageView03"
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_below="@id/TextAbout02b"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:foregroundTint="#009688"
            android:src="@android:drawable/ic_menu_myplaces" />


    </RelativeLayout>

</ScrollView>

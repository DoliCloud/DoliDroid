<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <!-- Theme for DoliDroid first page -->
    <!-- parent="@android:style/Theme.NoTitleBar" = old menu without ActionBar -->
    <!-- parent="@android:style/Theme.Holo" (need min sdk=11) will enabled ActionBar  -->
    <style name="DoliDroidThemeFirst" parent="@android:style/Theme.Holo.Light.DarkActionBar">
		<item name="android:colorBackground">@color/white</item>
		<item name="android:textColor">@color/black</item>
	</style>

    <!-- Theme for DoliDroid second page -->
    <!-- parent="@android:style/Theme.NoTitleBar" = old menu without ActionBar -->
    <!-- parent="@android:style/Theme.Holo" (need min sdk=11) will enabled ActionBar  -->
    <style name="DoliDroidThemeSecond" parent="@android:style/Theme.Holo">
		<item name="android:colorBackground">@color/white</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:itemBackground">@color/white</item>
		<item name="android:popupBackground">@color/white</item>
		<!-- Do not force background here, we need some widget black and other whites <item name="android:background">@color/white</item> -->
		<!-- Do not force background here, we need some widget black and other whites <item name="android:textColor">@color/white</item> -->		
	</style>

    <!-- Theme for DoliDroid about page -->
    <!-- parent="@android:style/Theme.NoTitleBar" = old menu without ActionBar -->
    <!-- parent="@android:style/Theme.Holo" (need min sdk=11) will enabled ActionBar  -->
    <style name="DoliDroidThemeAbout" parent="@android:style/Theme.Holo.Light.DarkActionBar">
		<item name="android:colorBackground">@color/white</item>
		<item name="android:textColor">@color/black</item>
		<!-- Do not force background here, we need some widget black and other whites <item name="android:background">@color/white</item> -->
		<!-- Do not force background here, we need some widget black and other whites <item name="android:textColor">@color/white</item> -->		
	</style>
	    
</resources>